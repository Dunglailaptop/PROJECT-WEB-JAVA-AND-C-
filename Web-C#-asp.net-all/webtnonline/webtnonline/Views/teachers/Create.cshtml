@model webtnonline.Models.teacher

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <style>
        input#tea_name {
            border: 1px solid;
        }
        input#tea_pass {
            border: 1px solid;
        }
        input#tea_SDT {
            border: 1px solid;
        }
        input#tea_diachi {
            border: 1px solid;
        }
        input#tea_email {
            border: 1px solid;
        }
        input#hoten {
            border: 1px solid;
        }
    </style>
    <div class="form-horizontal" style="margin-left:100px;margin-right:100px;">
        <h3 style="margin-left:500px;">Thêm giáo viên</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
          <h4>Tên tài khoản giáo viên</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tea_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tea_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Mật khẩu</h4>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.tea_pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tea_pass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Số điện thoại</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tea_SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tea_SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Địa chỉ</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tea_diachi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tea_diachi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>email</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tea_email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tea_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Họ và tên giáo viên</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hoten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hoten, "", new { @class = "text-danger" })
            </div>
        </div>

      

  

     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />|
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

